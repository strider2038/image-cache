{
    "name": "strider2038/image-cache",
    "description": "Microservice for caching images from external storages (WebDAV or API). It can process images by applying simple transformations such as resizing, cropping and shifting.",
    "type": "microservice",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Lazarev",
            "email": "strider2038@yandex.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "roave/security-advisories": "dev-master",
        "guzzlehttp/guzzle": "6.*",
        "symfony/dependency-injection": "4.*",
        "symfony/yaml": "4.*",
        "symfony/config": "4.*",
        "symfony/filesystem": "4.*",
        "symfony/validator": "4.*",
        "monolog/monolog": "1.*",
        "myclabs/php-enum": "1.*",
        "doctrine/annotations": "1.*",
        "doctrine/cache": "1.*",
        "doctrine/collections": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "phake/phake": "3.*",
        "satooshi/php-coveralls": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Strider2038\\ImgCache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Strider2038\\ImgCache\\Tests\\": "tests/"
        }
    }
}
